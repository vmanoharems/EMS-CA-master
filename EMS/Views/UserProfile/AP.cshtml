                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                    </div>
                                </div>    
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-4 col-sm-4 col-xs-6 col-lg-4">
                            <div class="form-group">
                                <label class="width100">Vendor</label>
                                <input type="text" id="txtVendorPh" class="form-control VendorCodeAP">
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-4 col-sm-4 col-xs-6 col-lg-4">
                            <div class="form-group">
                                <label class="width100">Batch</label>
                                <select class="form-control floatLeft margin-r-5" id="txtBatchNoPHistory"><option>Select</option><option>JJ160507</option></select> 
                            </div>
                        </div>
                    </div>

